<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="dltone.com.mealhero.VolunteerEditActivity">
    <ProgressBar
        android:id="@+id/editVolunteer_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/editVolunteer_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:textSize="@dimen/client_edit_label_font_size"
                android:text="@string/volunteer_edit_name_label"
                android:id="@+id/volunteer_edit_name_label"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/client_edit_text_container_height"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/volunteer_edit_name_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/client_edit_text_font_size"
                android:id="@+id/volunteer_edit_name_box"
                />

            <!-- [OBSOLETE]
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:textSize="@dimen/client_edit_label_font_size"
                android:text="@string/volunteer_edit_username_label"
                android:id="@+id/volunteer_edit_username_label"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/client_edit_text_container_height"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/volunteer_edit_username_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/client_edit_text_font_size"
                android:id="@+id/volunteer_edit_username_box"
                /> -->



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:textSize="@dimen/client_edit_label_font_size"
                android:text="@string/volunteer_edit_email_label"
                android:id="@+id/volunteer_edit_email_label"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/client_edit_text_container_height"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/volunteer_edit_email_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/client_edit_text_font_size"
                android:id="@+id/volunteer_edit_email_box"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:textSize="@dimen/client_edit_label_font_size"
                android:text="@string/volunteer_edit_password_label"
                android:id="@+id/volunteer_edit_password_label"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/client_edit_text_container_height"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/volunteer_edit_password_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/client_edit_text_font_size"
                android:id="@+id/volunteer_edit_password_box"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:textSize="@dimen/client_edit_label_font_size"
                android:text="@string/volunteer_edit_permission_label"
                android:id="@+id/volunteer_edit_permission_label"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/client_edit_text_container_height"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/padding_top"
                android:layout_marginBottom="@dimen/padding_bottom"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/volunteer_edit_permission_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/client_edit_text_font_size"
                android:id="@+id/volunteer_edit_permission_box"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/client_edit_button_height"
                android:layout_marginTop="@dimen/client_edit_button_margin_top"
                android:layout_marginLeft="@dimen/client_edit_button_margin"
                android:layout_marginRight="@dimen/client_edit_button_margin"
                android:text="@string/button_assign_clients_text"
                android:textSize="@dimen/client_edit_name_font_size"
                android:id="@+id/volunteer_edit_button"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
