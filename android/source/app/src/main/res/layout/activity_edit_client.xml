<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dltone.com.mealhero.EditClientActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/client_image_width"
            android:layout_height="@dimen/client_image_height"
            android:paddingTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingBottom="@dimen/padding_bottom"
            android:id="@+id/client_edit_item_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/client_list_item_image"
            android:paddingTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:textSize="@dimen/client_name_font_size"
            android:id="@+id/client_edit_item_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/client_list_item_image"
            android:layout_below="@id/client_list_item_name"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingLeft="@dimen/padding_left"
            android:textSize="@dimen/client_address_font_size"
            android:id="@+id/client_edit_item_address" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/client_address_label_font_size"
            android:text="@string/client_address_label"
            android:id="@+id/client_edit_address_label"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="3"
            android:layout_toRightOf="@id/client_edit_address_label"
            android:id="@+id/client_edit_address_edit"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/client_age_font_size"
            android:text="@string/client_age_label"
            android:id="@+id/client_edit_item_age_label"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_toRightOf="@id/client_edit_item_age_label"
            android:id="@+id/client_edit_item_age_edit"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top"
        android:textSize="@dimen/client_diet_font_size"
        android:text="@string/client_diet_label"
        android:id="@+id/client_edit_diet_label"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/client_edit_diet_edit"
        />

</LinearLayout>